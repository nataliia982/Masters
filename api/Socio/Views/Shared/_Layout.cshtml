    <script>
    $(function() {
        //console.log('dgfas');
        var chat = $.connection.chat;
        $.connection.hub.start();
        var userId = 12345;
        var conversationId = 123;

        chat.client.send = function(message) {
            $("#chat-window").append('<div class="row message-bubble">' +
                '<p class="text-muted">Name</p><span>' + message + '</span></div>');
        };

        // Set the name
        $.connection.hub.qs = "userId=" + userId;

        $("#send-btn").on("click", function() {
            chat.server.send($('msg-box').val(), conversationId);
            $('msg-box').val('');
        });
    });
    </script>
